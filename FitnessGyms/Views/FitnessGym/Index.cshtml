@model IEnumerable<FitnessGyms.Application.FitnessGym.FitnessGymDto>

@{
    ViewData["Title"] = "FitnessGyms";
}

<h1>FitnessGyms</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.PhoneNumber</h6>
                <p class="card-text">@item.Description</p>
                <a class="btn btn-primary" asp-controller="FitnessGym" asp-action="Details" asp-route-encodedName="@item.EncodedName">Details</a>
                <a href="#" class="btn btn-outline-secondary ">Edit</a>
            </div>
        </div>
    }
</div>
